{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build with CPR and cURL",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-mmacosx-version-min=15.6",
                "-pthread",
                "main.cpp",
                "-o",
                "main",
                "-I",
                "/Users/aleks/vcpkg/installed/arm64-osx/include",
                "-L",
                "/Users/aleks/vcpkg/installed/arm64-osx/lib",
                "-lcpr",
                "-lcurl",
                "-lssl",
                "-lcrypto",
                "-lz",
                "-framework", "CoreFoundation",
                "-framework", "SystemConfiguration"
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Compiles main.cpp with CPR, cURL, OpenSSL, zlib, and macOS frameworks."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}